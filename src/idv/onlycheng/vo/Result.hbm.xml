<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="idv.onlycheng.vo.Result" table="t_result">
		<!-- 組合主鍵映射 -->
		<composite-id>
			<key-many-to-one name="student" column="sutId" />
			<key-many-to-one name="subject" column="subId" />
		</composite-id>
		<property name="score" />
		<!-- 基於主鍵的一對一，constrained為true，將添加外鍵約束 -->
		<!-- <one-to-one name="Card" constrained="true" /> -->
		<!-- 當多對一時，在多的一方的外鍵不重複時，其實質上就是一對一 -->
		<!-- <many-to-one name="card" column="card_id" unique="true" /> -->
	</class>
</hibernate-mapping>